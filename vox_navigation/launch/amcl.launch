<?xml version="1.0"?>
<launch>
  <!-- <node name="map_server" pkg="map_server" type="map_server"  /> -->
  <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="map" value="/map"/>
</node> -->
  <arg name="namesp" default="vox"/>
  <arg name="use_map_topic" default="true"/>
  <arg name="scan_topic" default="/$(arg namesp)/scan" />

  <group ns="$(arg namesp)">
    <node pkg="amcl" type="amcl" name="amcl">
      <param name="use_map_topic" value="$(arg use_map_topic)"/>
      <!-- Publish scans from best pose at a max of 10 Hz -->
      <!-- <param name="scan_topic" value="$(arg scan_topic)"/> -->
      <param name="base_frame_id" value="/$(arg namesp)/dummy_link"/>
      <param name="gui_publish_rate" value="10.0"/>
      <param name="laser_max_beams" value="240"/>
      <param name="min_particles" value="500"/>
      <param name="max_particles" value="2000"/>
      <param name="kld_err" value="0.05"/>
      <param name="kld_z" value="0.99"/>
      <param name="odom_model_type" value="omni-corrected"/> 
      <param name="odom_alpha1" value="0.005"/>
      <param name="odom_alpha2" value="0.005"/>
      <!-- translation std dev, m -->
      <param name="odom_alpha3" value="0.010"/>
      <param name="odom_alpha4" value="0.005"/>
      <param name="odom_alpha5" value="0.003"/>
      <param name="laser_z_hit" value="0.5"/>
      <param name="laser_z_short" value="0.05"/>
      <param name="laser_z_max" value="0.05"/>
      <param name="laser_z_rand" value="0.5"/>
      <param name="laser_sigma_hit" value="0.2"/>
      <param name="laser_lambda_short" value="0.1"/>
      <param name="laser_model_type" value="likelihood_field"/>
      <!-- <param name="laser_model_type" value="beam"/> -->
      <param name="laser_likelihood_max_dist" value="2.0"/>
      <param name="update_min_d" value="0.25"/>
      <param name="update_min_a" value="0.02"/>
      <param name="odom_frame_id" value="/$(arg namesp)/odom"/>
      <param name="global_frame_id" value="/$(arg namesp)/map"/> <!-- make it into map for using the merged map-->
      <param name="resample_interval" value="2"/>
      <!-- <param name="tf_broadcast" value="false"/> -->
      <!-- Increase tolerance because the computer can get quite busy -->
      <param name="transform_tolerance" value="0.1"/>
      <param name="recovery_alpha_slow" value="0.0"/>
      <param name="recovery_alpha_fast" value="0.0"/>
      <remap from="scan" to="$(arg scan_topic)"/>
    </node>
  </group>

</launch>
